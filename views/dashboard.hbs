<h5>Dashboard</h5>
<h2>Welcome {{name}}</h2>
<p>You can view your stories here</p>

{{#if stories}}
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Status</th>
				<th></th>
			</tr>	
		</thead>
		<tbody>
			{{#each stories}}
				<tr>
					<td><a href="/stories/{{_id}}">{{title}}</a></td>
					<td>{{formatDate createdAt "dddd, MMMM Do YYYY, h:mm:ss a"}}</td>
					<td><span class="dash-status">{{status}}</span></td>
					<td>
						<a href="/stories/edit/{{_id}}" class="btn btn-float">
							<i class="fas fa-edit"></i>
						</a>

						<form action="/stories/{{_id}}?_method=DELETE" method="POST">
							<button class="btn red">
								<i class="fas fa-trash"></i>
							</button>
						</form>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
	<p>You currently don't have any stories</p>
{{/if}}
